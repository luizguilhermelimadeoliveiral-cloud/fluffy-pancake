  </div>  <script>
    // --- CONFIGURE AQUI ---
    const PIX_KEY = 'insira_sua_chave_pix_aqui'; // substituir com sua chave Pix (e.g. cpf/cnpj/email/telefone/txid)
    const PIX_QR_URL = ''; // opcional: link para imagem do QR Code (deixe vazio para usar o placeholder)
    const SELLER_WA = '5591999999999'; // número do WhatsApp do vendedor com código do país e DDD (ex: 5591999999999)
    const SELLER_PRICE = 'R$ 19,90';
    // ----------------------

    const modal = document.getElementById('modal');
    const buyPix = document.getElementById('buyPix');
    const buyWhats = document.getElementById('buyWhats');
    const pixKeyEl = document.getElementById('pixKey');
    const qrImage = document.getElementById('qrImage');

    pixKeyEl.textContent = PIX_KEY || 'CHAVE_PIX_AQUI';
    if(PIX_QR_URL){
      qrImage.innerHTML = '<img src="'+PIX_QR_URL+'" alt="QR Pix" style="max-width:100%;height:auto;border-radius:8px" />';
    }

    buyPix.addEventListener('click', ()=>{ modal.style.display='flex'; });
    modal.addEventListener('click', (e)=>{ if(e.target===modal) modal.style.display='none'; });

    document.getElementById('copyPix').addEventListener('click', ()=>{
      navigator.clipboard.writeText(PIX_KEY).then(()=>{ alert('Chave Pix copiada!'); }).catch(()=>{ alert('Não foi possível copiar.'); });
    });

    // Quando usuário clica em "Já paguei" — abre WhatsApp com mensagem e anexa preço e instrução
    document.getElementById('iPaid').addEventListener('click', ()=>{
      const msg = encodeURIComponent('Olá, já realizei o pagamento do e-book "Entendendo o TDAH" no valor de '+SELLER_PRICE+'. Envio aqui o comprovante. Nome: ');
      const waUrl = 'https://wa.me/'+SELLER_WA+'?text='+msg;
      window.open(waUrl, '_blank');
    });

    // Botão WhatsApp direto (inicia conversa com mensagem pronta)
    buyWhats.addEventListener('click', (e)=>{
      e.preventDefault();
      const msg = encodeURIComponent('Olá! Quero comprar o e-book "Entendendo o TDAH". Como faço o pagamento via Pix?');
      const waUrl = 'https://wa.me/'+SELLER_WA+'?text='+msg;
      window.open(waUrl, '_blank');
    });
  </script></body>
